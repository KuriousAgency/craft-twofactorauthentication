{% if isEnabled %}
    <p>
        {{ 'Your account is secured.'|t }}

        <a class="go nowrap" href="{{ cpUrl('twofactorauthentication') }}">
            {{- 'Go to settings'|t -}}
        </a>
    </p>
{% else %}
    <p class="warning">
        {{ 'Two-factor authentication is not turned on for your account!'|t }}
        {{ 'With two-factor authentication you can improve protection of your account, because your phone (or other device) is needed as a second step during login.'|t }}
    </p>

    <p>
        <a class="btn submit icon secure" href="{{ cpUrl('twofactorauthentication') }}">
            {{- 'Secure your acoount'|t -}}
        </a>
    </p>
{% endif %}